<%= form_for @message do |form| %>
  <%#= form.label :recepient_id %>
  <%#= form.text_field :recepient_id %>
  <%= form.select :recepient_id, @recepients %>
  <%= form.label :subject %>
  <%= form.text_field :subject %>
  <%= form.label :body %>
