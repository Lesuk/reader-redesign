<div class="form-row">
	<%= f.label :recepient_id, "* You can send messages only to those, who is following you", class: "r-label" %>
	<%= f.select :recepient_id, @recepients, include_blank: true %>
</div>

<div class="form-row">
	<%= f.label :subject %>
	<%= f.text_field :subject, class: "form-control" %>
</div>

<div class="form-row article-field">
	<%= f.label :body %>
	<%= f.text_area :body, class: "form-control", rows: 5, placeholder: "Enter text..." %>
</div>