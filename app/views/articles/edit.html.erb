<% provide(:title, 'Edit article') %>
<div class="content readable-content" role="main"> 
	
	<header class="entry-header">
			<h1 class="entry-title">Edit article</h1>
	</header>
	
	<%= form_for(@article) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= render 'form', f: f %>
		<div class="checkbox check-primary">
          <%= f.check_box :remove_thumbnail, id: "checkbox3" %> 
          <label for="checkbox3">Remove thumbnail?</label>
        </div>
        <div class="row">
        	<div class="col-md-8">
				<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		      	<%= link_to "Cancel", @article, class: "btn btn-large btn-primary" %>
	      	</div>
	    </div>
	<% end %>

</div>