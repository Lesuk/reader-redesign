<% provide(:title, "Edit article") %>
<h1>Update article</h1>

<div class="row">
  <div class="span10 offset1">
    <%= form_for(@article) do |f| %>
    	<%= render 'shared/error_messages', object: f.object %>
      	<%= render 'form', f: f %>
      	<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>