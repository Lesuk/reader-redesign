<% if signed_in? && current_user %>
<!-- Modal -->
<div class="modal fade" id="ModalWrite" tabindex="-1" role="dialog" aria-labelledby="ModalWriteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="ModalWriteLabel">Create a micropost</h4>
      </div>
      <%= form_for(@micropost) do |f| %>
      	<div class="modal-body">
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.text_area :content, id: "word-counter", placeholder: "Compose new micropost..." %>
			</div>
		</div>

		<div class="modal-footer">

			<div class="input-group">
	            <span class="input-group-btn">
	                <span class="btn btn-primary btn-file">
	                    <%= set_icon("picture", "glyph") %>Add picture<%= f.file_field :mpost_picrute %>
	                </span>
	            </span>
	            <input type="text" class="form-control" readonly>
	            <%= f.submit "Post", class: "btn btn-primary" %>
	        </div>
		</div>
	   <% end %>
    </div>
  </div>
</div>

<% end %>
