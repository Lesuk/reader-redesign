<%= form_for([current_user, task], remote: true) do |f| %>
<div class="row-fluid">
	<div class="checkbox check-success 	">
		<%= f.check_box :completed, { id: dom_id(task), class: "todo-list" } %>
		<%= f.label task.id, task.title, { class: "" } %>
	</div>
</div>
<% end %>
