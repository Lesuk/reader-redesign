<% provide(:title, 'My Tasks') %>
<div class="content white-bg" role="main"> 

	<header class="page-header-1">
		<h1 class="entry-title">My Tasks</h1>
	</header>

	<div class="task-form">
		<div class="task-form-h">
			<a href="javascript:;" class="expand">
				<h4><i class="fa fa-plus"></i><span class="semi-bold">Add New task</span></h4>
			</a>
		</div>
		<div class="task-form-body" style="overflow: hidden; display: none;">
			<%= render "form" %>
		</div>
	</div>

	<h2 class="tasks-header">Tasks in process</h2>

	<table class="table table-hover table-condensed dataTable" id="incomplete_tasks">
		<thead>
			<tr role="row">
			  <th class="small-cell"></th>
			  <th>Task name</th>
			  <th class="medium-cell">Priority</th>
			  <th class="medium-cell">Due by date</th>
			  <th class="small-cell">notes</th>
			  <th class="small-cell"></th>
			</tr>
		</thead>
		<tbody id="body-incompleted">
			<%= render @tasks %>
		</tbody>
	</table>

	<h2 class="tasks-header">Completed tasks</h2>

	<table class="table table-hover table-condensed dataTable" id="complete_tasks">
		<thead>
			<tr role="row">
			  <th class="small-cell"></th>
			  <th>Task name</th>
			  <th class="medium-cell">Priority</th>
			  <th class="medium-cell">Due by date</th>
			  <th class="small-cell">notes</th>
			  <th class="small-cell"></th>
			</tr>
		</thead>
		<tbody id="body-completed">
			<%= render @tasks_done %>
		</tbody>
	</table>	

</div>